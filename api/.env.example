
# Minimal API .env.example

# --- App ---
#DEBUG_MODE=false

# --- LLM ---
# LLM_PROVIDER=bedrock  # "openai" or "bedrock" (default: bedrock)
# LLM_MODEL=anthropic.claude-3-sonnet-20240229-v1:0  # (default)
# LLM_TEMPERATURE=0.1  # (default)
# LLM_MAX_TOKENS=1000  # (default)

# For OpenAI-compatible LLMs (uncomment if using)
#LLM_PROVIDER=openai
#LLM_BASE_URL=
#LLM_API_KEY=

# For AWS Bedrock (uncomment if using)
#AWS_REGION=us-west-2
#AWS_ACCESS_KEY_ID=
#AWS_SECRET_ACCESS_KEY=

# --- ChromaDB ---
#CHROMA_CLIENT_TYPE=persistent  # "persistent", "http", or "cloud" (default: persistent)
#CHROMA_PERSIST_PATH=./chroma_data
#CHROMA_HOST=localhost
#CHROMA_PORT=8000
#CHROMA_COLLECTION_NAME=policy_rag_collection

# For ChromaDB Cloud (uncomment if using)
#CHROMA_CLIENT_TYPE=cloud
#CHROMA_TENANT_ID=
#CHROMA_DATABASE=
#CHROMA_CLOUD_API_KEY=

# --- Checkpointer ---
#CHECKPOINT_TYPE=memory  # "memory" or "postgres" (default: memory)
#CHECKPOINT_POSTGRES_URL=postgresql://user:password@host:port/database?sslmode=disable

# --- Logging ---
#LOG_LEVEL=INFO
#LOG_TO_FILE=false